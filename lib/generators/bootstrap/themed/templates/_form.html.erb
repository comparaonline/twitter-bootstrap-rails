<%%= form_for @<%= resource_name %>, url: <%= singular_controller_routing_path %>_path(@<%= resource_name %>), html: { class: 'form-horizontal' } do |f| %>
  <%- columns.each do |column| -%>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= column.name.titleize %></label>
    <div class="col-sm-4">
      <%%= f.<%= column.field_type %> :<%= column.name %>, class: 'form-control' %>
    </div>
  </div>
  <%- end -%>


  <%%= f.submit nil, :class => 'btn btn-primary' %>
  <%%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            <%= controller_routing_path %>_path, class: 'btn btn-default' %>

<%% end %>
